@model TelefonRehberi.Model.Calisan

@{
    ViewBag.Title = "CalisanDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">Çalışan Detay</h1>
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span class="mr-2"><a href="index.html">Çalışan <i class="ion-ios-arrow-forward"></i></a></span> <span>Çalışan Detay <i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 ftco-animate">
                <h2 class="mb-3">Kişi Detay Bilgi</h2>               
                <div class="about-author d-flex p-4 bg-light">
                    <div class="bio mr-5">
                        <img src="/consulotion-master/images/person_1.jpg" alt="Image placeholder" class="img-fluid mb-4">
                    </div>
                    <div class="desc">
                        <h3>Adı - Soyadı: @Model.AdSoyad</h3>
                        <p>
                            Telefon:  @Model.Telefon<br />
                            Departman Adı:  @Model.Departmanlar.Ad
                                            </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
